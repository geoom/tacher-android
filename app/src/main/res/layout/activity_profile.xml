<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_margin="5dp"
        android:background="@drawable/selector_view_sky"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:padding="10dp"
            android:id="@+id/image_profile"
            android:layout_width="133dp"
            android:layout_height="133dp"
            android:src="@drawable/teacher_profile_photo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_weight="0.80"
                android:text="@string/teacher_name"
                android:textSize="30dp" />


            <TextView
                android:lines="2"
                android:maxLines="2"
                android:id="@+id/txt_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/teacher_description"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_margin="3dp" />

            <TextView
                android:text="@string/teacher_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:src="@drawable/teacher_profile_photo" />

        <EditText
            android:layout_margin="5dp"
            android:layout_weight="4"
            android:padding="5dp"
            android:background="@drawable/selector_edittext_green"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text=""
            android:hint="@string/input_comment" />

        <Button
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:background="@drawable/selector_button_green"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:text="@string/send_comment"
            android:layout_height="50dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>


</LinearLayout>






